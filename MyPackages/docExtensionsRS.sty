\newcommand{\pagediffValue}[2]{%
  \vrefpagenum\firstnum{#1}%
  \vrefpagenum\secondnum{#2}%
  \ifthenelse{\equal{\secondnum}{}}{%
    \PackageError{docExtensionsRS}{pagediffValue}
      {something is wrong}
  }{%
    \setcounter{tmp}{\secondnum-\firstnum+1}
  }
}

